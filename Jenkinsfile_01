#!groovy

pipeline {
    agent any

    tools {
        maven "maven" // You need to add a maven with name "3.6.0" in the Global Tools Configuration page
    }

    stages {
        stage("Build") {
            steps {
                sh "mvn -version"
                sh "mvn clean install"
            }
        }
        stage("Aqua Scan") {
            steps {
                aqua customFlags: '', hideBase: false, hostedImage: '', localImage: '', locationType: 'local', notCompliesCmd: '', onDisallowed: 'ignore', policies: '', register: true, registry: 'registry.aquasec.com/scanner:6.2', showNegligible: true, tarFilePath: ''       
            }
        }
    }

    post {
        always {
            cleanWs()
        }
    }
}
